<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xie.com.imoocmusic">

    <!-- vitamio -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/welcome_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/welcome_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity" />
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.RegisterActivity" />
        <activity android:name=".activity.MeActivity" />
        <activity android:name=".activity.ChangePasswordActivity" />
        <activity android:name=".activity.AlbumListActivity" />
        <activity android:name=".activity.PlayMusicActivity" />
        <activity android:name=".activity.IMActivity" />
        <activity android:name=".activity.ChatFriendListActivity" />
        <activity android:name=".activity.LiveTVActivity" />
        <activity
            android:name=".activity.LivePlayTvActivity"
            android:screenOrientation="landscape" />

        <!-- 初始化vitamio 的InitActivity -->
        <activity
            android:name="io.vov.vitamio.activity.InitActivity"
            android:configChanges="orientation|screenSize|smallestScreenSize|keyboard|keyboardHidden|navigation"
            android:launchMode="singleTop"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name=".activity.ChartsActivity" />
        <activity android:name=".activity.HistogramActivity" />
        <activity android:name=".activity.LineChartActivity" />
        <activity android:name=".activity.BarChartActivity" />
        <activity android:name=".activity.PieChartActivity" />
        <activity android:name=".activity.FlowLayoutActivity" />
        <activity android:name=".activity.FlowLayoutViewGroupActivity" />
        <activity android:name=".activity.FlexBoxLayoutActivity" />
        <activity android:name=".activity.FlexBoxLayoutManagerActivity" />
        <activity android:name=".activity.TagFlowLayoutActivity" />
        <activity android:name=".activity.ViewPagerActivity" />
        <activity android:name=".activity.HTTPURLConnectionActivity"></activity>
    </application>

</manifest>